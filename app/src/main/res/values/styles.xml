<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    Text View   -->
    <style name="TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextView.Silver">
        <item name="android:textColor">@color/colorSilver</item>
    </style>

    <style name="TextView.header">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.medium">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.bold">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    End Text View-->

    <style name="ButtonPink" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_pink</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonBlueGrey" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_blue_grey</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_shape_sign_in</item>
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
